<?php if(count($menu['children']) > 0): ?>
    <?php foreach($menu['children'] as $menu): ?>

        <?php $record = "";
        $parent = $menu['parent'];

        while ($parent != null) {
            $record = $record . '└ ';
            $parent = $parent->parent;
        }
        ?>

        <?php echo $__env->make('layout.tree', ['menu'=>$menu,'mark'=>$record], array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>

    <?php endforeach; ?>
<?php endif; ?>