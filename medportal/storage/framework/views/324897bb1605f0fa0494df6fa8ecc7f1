                                        <?php echo e($news[$i]->title); ?>

                                    <?php else: ?>
                                        <?php
                                        $title_i18n = $news[$i]->title;
                                        ?>
                                        <?php foreach($news[$i]['many'] as $news_i18n): ?>
                                            <?php
                                            if ($news_i18n->language == Cookie::get('language') && $news_i18n->title != null) {
                                                $title_i18n = $news_i18n->title;
                                            }
                                            ?>
                                        <?php endforeach; ?>
                                        <?php echo e($title_i18n); ?>

                                    <?php endif; ?>
                                </a>
