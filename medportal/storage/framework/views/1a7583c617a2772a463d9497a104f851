            <div class="title">
                <?php if(Cookie::get('language')==0): ?>
                    <?php echo e($news[0]->title); ?>

                <?php else: ?>
                    <?php
                    $title_i18n = $news[0]->title;
                    ?>
                    <?php foreach($news[0]['many'] as $news_i18n): ?>
                        <?php
                        if ($news_i18n->language == Cookie::get('language') && $news_i18n->title != null) {
                            $title_i18n = $news_i18n->title;
                        }
                        ?>
                    <?php endforeach; ?>
                    <?php echo e($title_i18n); ?>

                <?php endif; ?>
            </div>
            <div class="ck_htmlcode">
                <?php if(Cookie::get('language')==0): ?>
                    <?php echo $news[0]->content; ?>

                <?php else: ?>
                    <?php
                    $content_i18n = $news[0]->content;
                    ?>
                    <?php foreach($news[0]['many'] as $news_i18n): ?>
                        <?php
                        if ($news_i18n->language == Cookie::get('language') && $news_i18n->content != null) {
                            $content_i18n = $news_i18n->content;
                        }
                        ?>
                    <?php endforeach; ?>
                    <?php echo $content_i18n; ?>

                <?php endif; ?>
            </div>
            <!-- 內容 區塊 End -->
